{% extends 'base.html.twig' %}

{% block title %}Série # {{ program.id }}{% endblock %}


{% block body %}
    <div class="media">
        <img src="{{ program.poster }}" class="align-self-start mr-3" alt="{{ program.poster }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>Catégorie : {{ program.category.name }}</p>
        </div>
        <div class="media-body">
            <ul>
            {% for season in seasons %}
                <li>
                    <a href="{{ path('program_season_show', {programId: program.id, seasonId:season.id}) }}">{{ season.number }}</a></li>
            {% endfor %}
            </ul>
        </div>
    </div>


    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}